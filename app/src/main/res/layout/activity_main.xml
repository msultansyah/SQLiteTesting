<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="160dp"
        tools:ignore="UselessParent">


        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="SQLite Demo 01"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/ivDts"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText" />
        <ImageView
            android:id="@+id/ivDts"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_height="100dp"
            app:srcCompat="@drawable/logo"
            tools:ignore="ContentDescription" />



        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VSGA Tahap II"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ivDts"
            tools:ignore="HardcodedText" />

        

    </RelativeLayout>
    
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btUpgrade"
        android:text="Upgrade Database"
        android:layout_below="@+id/rlTitle"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btInsert"
        android:text="Insert A Friend"
        android:layout_below="@+id/btUpgrade"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="120dp"
        android:id="@+id/etId"
        android:text="Friend ID"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btGetAllFriend"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btGetAllFriend"
        android:text="Get All Friend"
        android:layout_below="@+id/btInsert"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btUpdate"
        android:text="Update Friend"
        android:layout_below="@+id/etId"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btDelete"
        android:text="Delete A Friend"
        android:layout_below="@+id/btUpdate"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <Button
        android:layout_width="match_parent"
        android:id="@+id/btGetAFriend"
        android:text="Get A Friend"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/btDelete"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
</RelativeLayout>